<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">
    <title>Your items</title>
</head>
<body>
    <center>
        <table class="table table-hover text-center">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Total Stock</th>
          </tr>
        </thead>
        <tbody>
            <%itemList.forEach(item => {%>
                <tr>
                    <th scope="row"><%= item._id %></th>
                    <td><%= item.productname %></td>
                    <td><%= item.description %></td>
                    <td><%= item.price %></td>
                    
                    <td><%= item.totalStock %></td>
                    <td>
                        <!--- çalışmıyorrr-->
                        <form action="/do-delete" method="post">
                        <!--   <input type="hidden" name="id" value={{item._id}}>     - -->
                             
                            <input type="hidden" name="itemId" value="<%=item._id%>">
                            <button onclick="deleteProduct(this)" class="btn danger btn-lg btn-outline-dark" type="button"><i
                                    class="fas fa-trash"></i>Delete</button>
        
                        </form> 
                    </td>
                    
                    
                </tr>
                
            <%})%>
        </tbody>
        <div class="abc">
            <a class="btn btn-dark btn-lg" href="/create_item" role="button">Create Item </a>

            <a class="btn btn-dark btn-lg" href="/profile" role="button">Go back to Profile </a>
        </div>
      
        

        
    <center/>
    </table>