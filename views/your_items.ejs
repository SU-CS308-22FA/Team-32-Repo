<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">ID of Items</th>
            <th scope="col">Product Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Total Stock</th>
          </tr>
        </thead>
        <tbody>
    <%itemList.forEach(item => {%>
        <tr>
            <th scope="row"><%= item._id %></th>
            <td><%= item.productname %></td>
            <td><%= item.description %></td>
            <td><%= item.price %></td>
            
            <td><%= item.totalStock %></td>
            <td>
                <button type = "button " class ="btn btn-dark btn-lg " onclick="doDelete('<%= item._id %>');">Delete </button>
            </td>
            
            
        </tr>
        
    <%})%>
        </tbody>
        <div class="abc">
            <a class="btn btn-dark btn-lg" href="/create_item" role="button">Create Item </a>

            <a class="btn btn-dark btn-lg" href="/profile" role="button">Go back to Profile </a>
        </div>
      

        <script>
            function doDelete(postId) 
            {
                $.ajax(
                    {
                        url: "/do-delete",
                        method: "POST",
                        data: 
                        {
                            i_id: postId
                        },
                        success: function(response) 
                        {
                            alert(response);
                        }
                    });
            }
        </script>
        

        
        
    </table>